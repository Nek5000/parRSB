#!/bin/bash
set -e

if [ ! -d exaCore ]; then
  git clone https://github.com/exaAlgo/exaCore.git
fi

if [ ! -d exaSort ]; then
  git clone https://github.com/exaAlgo/exaSort.git
fi

set -x
cd exaCore
make -j4 GSDIR=${GSDIR} PREFIX=build OCCA=0 install

cd ../exaSort
make -j4 EXADIR=../exaCore/build PREFIX=build install
set +x
