#!/bin/bash
set -e

if [ ! -d exaCore ]; then
  git clone https://github.com/exaAlgo/exaCore.git
fi

if [ ! -d exaSort ]; then
  git clone https://github.com/exaAlgo/exaSort.git
fi

set -x
cd exaCore
make -j4 GS_DIR=${GSDIR} OCCA=0 PREFIX=build install

cd ../exaSort
make -j4 GS_DIR=${GSDIR} EXA_DIR=../exaCore/build PREFIX=build install
set +x
